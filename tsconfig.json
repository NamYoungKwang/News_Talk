{
    "compilerOptions": {
        "lib": [
          "es2020",
          "dom"
        ],
        "module": "commonjs",
        "target": "es2020",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "incremental": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "build",
        "baseUrl": "src",
        "paths": {
            "config/*": [
                "config/*"
            ]
        }
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "exclude": [
        "node_modules"
    ]
}
